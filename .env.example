# ==============================================
# LinkDeal Environment Variables
# ==============================================
# Copy this file to .env and fill in the values
# ==============================================

# ========================================
# GENERAL
# ========================================
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# ========================================
# DATABASE (PostgreSQL)
# ========================================
POSTGRES_DB=linkdeal
POSTGRES_USER=linkdeal_user
POSTGRES_PASSWORD=Ayoub2002
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
# ========================================
# AUTH0 CONFIGURATION
# ========================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-api-audience

# ========================================
# EMAIL (SendGrid SMTP)
# ========================================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@linkdeal.com

# ========================================
# FRONTEND
# ========================================
FRONTEND_URL=http://localhost:3102
VITE_API_URL=http://localhost:8000/api

# ========================================
# ALLOWED HOSTS (comma-separated)
# ========================================
ALLOWED_HOSTS=localhost,127.0.0.1,linkdeal-backend,your-domain.com

# ========================================
# WHEREBY VIDEO (for session video calls)
# ========================================
WHEREBY_API_KEY=your-whereby-api-key
