# ==============================================
# LinkDeal Environment Variables
# ==============================================
# Copy this file to .env and fill in the values
# Usage:
#   docker-compose up -d              # Production
#   docker-compose --profile dev up   # Development
# ==============================================

# ========================================
# GENERAL
# ========================================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# ========================================
# DATABASE (PostgreSQL)
# ========================================
POSTGRES_DB=linkdeal_db
POSTGRES_USER=linkdeal_user
POSTGRES_PASSWORD=your-secure-database-password

# ========================================
# AUTH0 CONFIGURATION
# ========================================
AUTH0_DOMAIN=your-tenant.eu.auth0.com
AUTH0_API_AUDIENCE=https://linkdeal-api
AUTH0_SPA_CLIENT_ID=your-spa-client-id
AUTH0_SPA_CLIENT_SECRET=your-spa-client-secret
AUTH0_CUSTOM_NAMESPACE=https://linkdeal.com/claims/
AUTH0_MGMT_CLIENT_ID=your-mgmt-client-id
AUTH0_MGMT_CLIENT_SECRET=your-mgmt-client-secret
AUTH0_DB_CONNECTION=Username-Password-Authentication

# AUTH0 Role IDs (get from Auth0 Dashboard > User Management > Roles)
AUTH0_MENTOR_ROLE_ID=rol_xxxxx
AUTH0_MENTEE_ROLE_ID=rol_xxxxx
AUTH0_ADMIN_ROLE_ID=rol_xxxxx
AUTH0_SUPER_ADMIN_ROLE_ID=rol_xxxxx

# ========================================
# EMAIL (SendGrid SMTP)
# ========================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@linkdeal.com

# ========================================
# AI CONFIGURATION (OpenAI)
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
USE_MOCK_AI=False

# ========================================
# VIDEO CALLS (Whereby)
# ========================================
WHEREBY_API_KEY=your-whereby-api-key

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# Local development
VITE_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Docker production (uncomment for Docker)
# VITE_API_URL=http://linkdeal-backend:8000
# FRONTEND_URL=http://localhost:3102

VITE_APP_NAME=LinkDeal
VITE_APP_VERSION=1.0.0

# ========================================
# ALLOWED HOSTS (comma-separated)
# ========================================
ALLOWED_HOSTS=localhost,127.0.0.1,linkdeal-backend,your-domain.com
